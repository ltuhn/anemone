  timeSincePet = currentTime - millis(); 
  
  if (timeSincePet > 9999) {
    counter = 0;
  }
  if (counter >= 20) {
    feeling = "angry";
  } 
  else {
    feeling = "happy";
    counter++;
  }
}
    
